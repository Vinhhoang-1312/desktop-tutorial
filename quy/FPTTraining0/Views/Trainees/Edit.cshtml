@model FPTTraining0.ViewModels.TraineeCourseViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit Trainee</h2>

@Html.ValidationSummary(false, "", new { @class = "text-danger" })

@using (Html.BeginForm("Edit", "Trainees", FormMethod.Post))
{
    @Html.HiddenFor(p => p.Trainee.Id)
    <div class="form-group">
        @Html.LabelFor(p => p.Trainee.Name)
        @Html.EditorFor(p => p.Trainee.Name, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(p => p.Trainee.Name, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.Trainee.TraineeEmail)
        @Html.EditorFor(p => p.Trainee.TraineeEmail, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(p => p.Trainee.TraineeEmail, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.Trainee.PassEmail)
        @Html.TextBoxFor(p => p.Trainee.PassEmail, new { @class = "form-control" })
        @Html.ValidationMessageFor(p => p.Trainee.PassEmail, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.Trainee.Birth)
        @Html.TextBoxFor(p => p.Trainee.Birth, new { @class = "form-control" })
        @Html.ValidationMessageFor(p => p.Trainee.Birth, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.Trainee.Course.Name)
        @Html.DropDownListFor(p => p.Trainee.Course,
         new SelectList(Model.Courses, "Id", "Name"),
         "Select Course Name",
         new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Edit</button>
}
@Html.ActionLink("Back to Index", "Index")
