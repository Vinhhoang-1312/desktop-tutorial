@model IEnumerable<FPTTraining0.Models.Trainer>

@{
    ViewBag.Title = "Index";
}

<h2>Index Trainer</h2>
@Html.ActionLink("Create a new Trainer", "Create")
@using (Html.BeginForm("Index", "Trainers", FormMethod.Get))
{
    <p>
        Find by name: @Html.TextBox("SearchString")
        <input type="submit" value="Search" />
    </p>
}
<table class="table table-striped">
    <tr>
        <th>Id</th>
        <th>Trainer Name</th>
        <th>Email</th>
        <th>Password Email</th>
        <th>Major</th>
        @if (User.IsInRole("admin"))
        {
            <th>Delete</th>
            <th>Edit</th>
        }
    </tr>
    @foreach (var trainer in Model)
    {
        <tr>
            <td>@trainer.Id</td>
            <td>@trainer.Name</td>
            <td>@trainer.TrainerEmail</td>
            <td>@trainer.PassEmail</td>
            <td>@trainer.Major.Name</td>
            <td>@Html.ActionLink("Delete this trainer", "Delete", new { id = trainer.Id })</td>
            <td>@Html.ActionLink("Edit this trainer", "Edit", new { id = trainer.Id })</td>
        </tr>
    }
</table>
@Html.ActionLink("Back to home", "Index", "Home")
