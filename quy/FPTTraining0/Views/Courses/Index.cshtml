@model IEnumerable<FPTTraining0.Models.Course>
@{
    ViewBag.Title = "Index";
}

<h2>Index Courses</h2>
@Html.ActionLink("Create a new Course", "Create")
<table class="table table-striped">
    <tr>
        <th>Id</th>
        <th>Course Name</th>
        <th>Delete</th>
        <th>Edit</th>
    </tr>
    @foreach (var course in Model)
    {
        <tr>
            <td>@course.Id</td>
            <td>@course.Name</td>
            <td>@Html.ActionLink("Delete this course", "Delete", new { id = course.Id })</td>
            <td>@Html.ActionLink("Edit this course", "Edit", new { id = course.Id })</td>
        </tr>
    }
</table>
@Html.ActionLink("Back to home", "Index", "Home")
