﻿@model hoangkhoa.ViewModels.ManagerStaffViewModel
@{ ViewBag.TiTle = "Index"; }
@if (Request.IsAuthenticated && User.IsInRole("TrainingStaff"))
{
<p>
    <a onclick="window.location='@Url.Action("Register", "Account")'" type="button" class="btn btn-default">New User </a>
</p>}
<h3>Trainee</h3>
<div class="panel-body">
    <table class="table table-striped" id="Index">
        <thead>
            <tr>
                <th>UserName</th>
                <th>Email</th>
                <th>Role</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        @foreach (var user in Model.Trainee)
        {
<tr>
    <td>@user.UserName </td>
    <td> @user.Email</td>
    <td> @user.RoleName</td>
    <td>@Html.ActionLink("Edit", "Edit", new { id = user.UserId })</td>
    <td>@Html.ActionLink("Delete", "Delete", new { id = user.UserId })</td>
</tr>
}
    </table>
</div>
