﻿@model IEnumerable<hoangkhoa.Models.TraineeCourse>

@{ ViewBag.Title = "Assign Trainee to Course"; }

<h2>Courses</h2>
@if (User.IsInRole("TrainingStaff"))
{
    <p>
        <input type="search" placeholder="Find by name or email"
               name="searchTrainee" style="width:225px; height:33px;" />

        <input type="submit" value="Search" class="btn btn-primary" />

        @Html.ActionLink("View all Trainee", "Index", "TraineeCourses")
    </p>
    {
        @Html.ActionLink("Assign Trainee to Course", "Create")
    }
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Trainee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course)
            </th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Trainee.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Course.Name)
                </td>
                <td>@Html.ActionLink("Edit", "Edit", new { id = item.Id })</td>
                <td>@Html.ActionLink("Delete", "Delete", new { id = item.Id })</td>
            </tr>
        }
    </table>
}
@if (User.IsInRole("Trainee"))
{<table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(item => item.Course)
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Course.Name)
                </td>
            </tr>
        }
    </table>}
