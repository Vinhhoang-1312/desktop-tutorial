﻿@model hoangkhoa.ViewModels.TraineeCourseViewModel

@{ ViewBag.Title = "Create"; }

<h2>Assign Trainee to Course</h2>

@using (Html.BeginForm("Create", "TraineeCourses", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(tr => tr.TraineeCourse.TraineeId)
        @Html.DropDownListFor(tr => tr.TraineeCourse.TraineeId
          , new SelectList(Model.Trainees, "Id", "Email"),
          "Select Trainee",
          new { @class = "form-control" }
        )
    </div>

    <div class="form-group">
        @Html.LabelFor(tr => tr.TraineeCourse.Course.Name)
        @Html.DropDownListFor(tr => tr.TraineeCourse.CourseId
          , new SelectList(Model.Courses, "Id", "Name"),
          "Select Course",
          new { @class = "form-control" }
        )
    </div>

    <button type="submit" class="btn btn-primary">Assign</button>
}